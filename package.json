{
  "name": "prompt-typing-tutor",
  "version": "1.0.0",
  "description": "Profressional prompt engineering typing tutor with premium features",
  "author": {
    "name": "ai4mcpservers",
    "url": "https://github.com/ai4mcpservers"
  },
  "main": "build/index.js",
  "scripts": {
    "start": "electron .",
    "compile": "tsc && copyfiles -f src/index.html build",
    "build": "tsc && electron-builder",
    "build:dev": "tsc && electron-builder --publish=never",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "pack": "electron=builder --dir",
    "dist": "electron-builder",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "electron": "^38.2.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "typescript": "^4.7.4"
  },
  "build": {
    "appId": "com.prompttutor.app",
    "productName": "Prompt Typing Tutor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
